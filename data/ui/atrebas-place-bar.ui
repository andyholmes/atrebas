<interface>
  <template class="AtrebasPlaceBar" parent="GtkBox">
    <property name="orientation">vertical</property>
    <style>
      <class name="atrebas-place-bar"/>
      <class name="view"/>
    </style>
    <child>
      <object class="GtkStack" id="stack">
        <property name="interpolate-size">1</property>
        <property name="vhomogeneous">1</property>

        <!-- Empty Page -->
        <child>
          <object class="GtkStackPage">
            <property name="name">empty</property>
            <property name="child">
              <object class="GtkBox"/>
            </property>
          </object>
        </child>

        <!-- Loading Page -->
        <child>
          <object class="GtkStackPage">
            <property name="name">load</property>
            <property name="child">
              <object class="GtkCenterBox">
                <property name="margin-bottom">8</property>
                <property name="margin-end">12</property>
                <property name="margin-start">12</property>
                <property name="margin-top">8</property>
                <property name="vexpand">1</property>
                <property name="orientation"
                          bind-source="place_summary"
                          bind-property="orientation"
                          bind-flags="sync-create"/>
                <child type="start">
                  <object class="GtkImage">
                    <property name="icon-name">atrebas-spinner-symbolic</property>
                    <property name="pixel-size">32</property>
                    <style>
                      <class name="atrebas-spinner"/>
                    </style>
                  </object>
                </child>
                <child type="center">
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Loadingâ€¦</property>
                    <property name="hexpand">1</property>
                    <property name="valign">center</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Error Page -->
        <child>
          <object class="GtkStackPage">
            <property name="name">error</property>
            <property name="child">
              <object class="GtkBox">
                <property name="margin-bottom">8</property>
                <property name="margin-end">12</property>
                <property name="margin-start">12</property>
                <property name="margin-top">8</property>
                <property name="hexpand">1</property>
                <property name="valign">center</property>
                <property name="vexpand">1</property>
                <property name="orientation"
                          bind-source="place_summary"
                          bind-property="orientation"
                          bind-flags="sync-create"/>
                <child type="start">
                  <object class="GtkImage">
                    <property name="icon-name">computer-fail-symbolic</property>
                    <property name="pixel-size">32</property>
                    <property name="valign">center</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child type="center">
                  <object class="GtkLabel" id="error_label">
                    <property name="label" translatable="yes">Something went wrong</property>
                    <property name="hexpand">1</property>
                    <property name="valign">center</property>
                    <style>
                      <class name="atrebas-subtitle"/>
                    </style>
                  </object>
                </child>
                <child type="end">
                  <object class="GtkButton">
                    <property name="action-name">place.update</property>
                    <property name="child">
                      <object class="GtkLabel">
                        <property name="label" translatable="yes">Retry</property>
                        <property name="margin-end">24</property>
                        <property name="margin-start">24</property>
                      </object>
                    </property>
                    <property name="valign">center</property>
                    <style>
                      <class name="circular"/>
                      <class name="suggested-action"/>
                    </style>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Place Stub -->
        <child>
          <object class="GtkStackPage">
            <property name="name">info</property>
            <property name="child">
              <object class="AtrebasPlaceHeader" id="place_summary">
                <property name="place"
                          bind-source="AtrebasPlaceBar"
                          bind-property="place"
                          bind-flags="sync-create"/>
                <property name="hexpand">1</property>
                <child>
                  <object class="GtkGestureClick">
                    <signal name="released"
                            handler="on_info_activated"
                            object="AtrebasPlaceBar"
                            swapped="no"/>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>

    <!-- Place Revealer -->
    <child>
      <object class="GtkRevealer" id="revealer">
        <child>
          <object class="GtkScrolledWindow">
            <property name="hscrollbar-policy">never</property>
            <property name="propagate-natural-height">1</property>
            <!-- <property name="vexpand">true</property> -->
            <child>
              <object class="GtkViewport">
                <property name="scroll-to-focus">1</property>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="margin-bottom">6</property>
                    <property name="margin-end">6</property>
                    <property name="margin-start">6</property>
                    <property name="margin-top">6</property>
                    <property name="spacing">12</property>

                    <!-- Cultural Data -->
                    <child>
                      <object class="GtkFrame" id="culture_section">
                        <child>
                          <object class="GtkGrid">
                            <property name="margin-bottom">12</property>
                            <property name="margin-end">12</property>
                            <property name="margin-start">12</property>
                            <property name="margin-top">12</property>
                            <property name="column-spacing">6</property>
                            <property name="row-spacing">6</property>

                            <!-- Language -->
                            <child>
                              <object class="GtkImage">
                                <property name="icon-name">atrebas-language-symbolic</property>
                                <property name="pixel-size">16</property>
                                <layout>
                                  <property name="row">0</property>
                                  <property name="column">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="halign">start</property>
                                <property name="hexpand">1</property>
                                <property name="label" translatable="yes">Language</property>
                                <property name="xalign">0.0</property>
                                <attributes>
                                  <attribute name="weight" value="bold"/>
                                </attributes>
                                <layout>
                                  <property name="row">0</property>
                                  <property name="column">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="language_label">
                                <property name="margin-bottom">6</property>
                                <property name="use-markup">1</property>
                                <property name="wrap">1</property>
                                <property name="xalign">0.0</property>
                                <layout>
                                  <property name="row">1</property>
                                  <property name="column">1</property>
                                </layout>
                                <style>
                                  <class name="atrebas-small"/>
                                </style>
                              </object>
                            </child>

                            <!-- Treaty -->
                            <child>
                              <object class="GtkImage">
                                <property name="icon-name">atrebas-treaty-symbolic</property>
                                <property name="pixel-size">16</property>
                                <layout>
                                  <property name="row">2</property>
                                  <property name="column">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="halign">start</property>
                                <property name="hexpand">1</property>
                                <property name="label" translatable="yes">Treaty</property>
                                <property name="xalign">0.0</property>
                                <attributes>
                                  <attribute name="weight" value="bold"/>
                                </attributes>
                                <layout>
                                  <property name="row">2</property>
                                  <property name="column">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="treaty_label">
                                <property name="margin-bottom">6</property>
                                <property name="use-markup">1</property>
                                <property name="wrap">1</property>
                                <property name="xalign">0.0</property>
                                <layout>
                                  <property name="row">3</property>
                                  <property name="column">1</property>
                                </layout>
                                <style>
                                  <class name="atrebas-small"/>
                                </style>
                              </object>
                            </child>

                            <!-- More Information -->
                            <child>
                              <object class="GtkImage">
                                <property name="icon-name">web-browser-symbolic</property>
                                <property name="pixel-size">16</property>
                                <layout>
                                  <property name="row">4</property>
                                  <property name="column">0</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel">
                                <property name="halign">start</property>
                                <property name="hexpand">1</property>
                                <property name="label" translatable="yes">More Information</property>
                                <property name="xalign">0.0</property>
                                <attributes>
                                  <attribute name="weight" value="bold"/>
                                </attributes>
                                <layout>
                                  <property name="row">4</property>
                                  <property name="column">1</property>
                                </layout>
                              </object>
                            </child>
                            <child>
                              <object class="GtkLabel" id="information_label">
                                <property name="margin-bottom">6</property>
                                <property name="use-markup">1</property>
                                <property name="wrap">1</property>
                                <property name="xalign">0.0</property>
                                <layout>
                                  <property name="row">5</property>
                                  <property name="column">1</property>
                                </layout>
                                <style>
                                  <class name="atrebas-small"/>
                                </style>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Contemporary Address -->
                    <child>
                      <object class="GtkFrame" id="address_section">
                        <child>
                          <object class="GtkLabel" id="address_label">
                            <property name="ellipsize">end</property>
                            <property name="halign">start</property>
                            <property name="hexpand">1</property>
                            <property name="margin-bottom">6</property>
                            <property name="margin-end">6</property>
                            <property name="margin-start">6</property>
                            <property name="margin-top">6</property>
                            <property name="use-markup">1</property>
                            <property name="xalign">0.0</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>

